@model TechShop.Web.Models.LoginViewModel

@{
    Layout = "_layoutLogin";
    ViewData["Title"] = "Login";
}

<div class="animated-bg">
    @using (Html.BeginForm(actionName: "Index", controllerName: "Login", method: FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="w-100 vh-100 d-flex flex-column align-items-center justify-content-center">
            <img src="~/img/TechShop Academy blanco sin fondo.png"
                 alt="TechShop Academy"
                 class="LoginImg" />

            <div class="LoginCard col-sm-10 col-md-8 col-lg-6">
                <h2 class="LoginText">Iniciar Sesión</h2>
                <div class="card-body">
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Codigo, "Código", new { @class = "control-label LoginLabel" })
                        @Html.EditorFor(m => m.Codigo, new { htmlAttributes = new { @class = "form-control" } })
                        @if (!string.IsNullOrEmpty(ViewBag.MessageUser as string))
                        {
                            <p class="LoginAlert">@ViewBag.MessageUser</p>
                        }
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Password, "Contraseña", new { @class = "control-label LoginLabel" })
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @type = "password", @class = "form-control" } })
                        @if (!string.IsNullOrEmpty(ViewBag.MessagePassword as string))
                        {
                            <p class="LoginAlert">@ViewBag.MessagePassword</p>
                        }
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" class="PrimaryBtn">Ingresar</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>