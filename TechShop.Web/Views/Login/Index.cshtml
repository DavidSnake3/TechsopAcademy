@model Libreria.Infraestructure.Models.LoginTest;
@{
    Layout = "_layoutLogin";
    ViewData["Title"] = "Login";
}


<div class="animated-bg">
    @using (Html.BeginForm("", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="vw-100 vh-100" style="display:flex; flex-direction:column; align-items:center; justify-content:center">
            <div class="LoginCard col-sm-10 col-md-8 col-lg-6">
                <img src="~/img/TechShop Academy sin fondo.png" alt="Alternate Text" class="LoginImg" style="" />

                <div class="card-body">
                    <h2 class="LoginText">
                        Iniciar Sesion
                    </h2>
                    @Html.LabelFor(model => model.User,"Usuario", htmlAttributes:
                    new { @class = "control-label col-md-2 LoginLabel" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.User, new {
                                        htmlAttributes = new { @class = "form-control" } })
                    @{
                        if (!string.IsNullOrEmpty(ViewBag.MessageUser))
                        {
                            <p class="LoginAlert">
                                @ViewBag.MessageUser
                            </p>
                        }
                    }
                </div>
                @Html.LabelFor(model => model.Password, "Contraseña",
                htmlAttributes: new { @class = "control-label col-md-2 LoginLabel" })                         <div class="col-md-12">
                    @Html.EditorFor(model => model.Password, new {
                                        htmlAttributes = new { type = "password", @class = "form-control" } })
                    @{
                        if (!string.IsNullOrEmpty(ViewBag.MessagePassword))
                        {
                            <p class="LoginAlert">
                                @ViewBag.MessagePassword
                            </p>
                        }
                    }
                </div>
                <div class="w-100" style="display:flex; align-items:center; justify-content:center">
                    <button type="submit" id="btnGuardar"
                            class="PrimaryBtn">
                        Ingresar
                    </button>
                </div>

            </div>


            <footer class="border-top footer text-muted">
                <div class="container text-center">
                    &copy; 2025 - <span style="font-weight: bold;">TechShop International</span>
                </div>
            </footer>
        </div>
    </div>
        }
</div> 