<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechShop Academy</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/NavbarCursos.css" asp-append-version="true" />
    <link rel="stylesheet" href="@(ViewData["Style"])" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CursoDetalle.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/3.0.0/uicons-regular-rounded/css/uicons-regular-rounded.css'>

</head>
<body class="d-flex flex-column min-vh-100">
    <header style="margin: 0; padding: 0;">
        @using Microsoft.AspNetCore.Authentication
        @using Microsoft.AspNetCore.Authorization

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid" style="position: relative;">
                <div class="p-0 mt-2 mb-2">
                    <div class="navbar justify-content-between p-0 m-0">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link atras" asp-controller="CursosAdmin" asp-action="Index"><i class="fi fi-rr-arrow-circle-left"></i>Atras</a>
                            </li>

                        </ul>
                    </div>
                </div>

                <a class="navbar-brand NavbarImg" href="#">
                    <img src="~/img/TechShop Academy blanco sin fondo.png" alt="TechShop Academy" />
                </a>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main class="flex-grow-1 p-0">
            <div class="container-fluid h-100 px-2 py-0">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - <span style="font-weight: bold;">TechShop International</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.4/dist/sweetalert2.all.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @if (ViewBag.NotificationMessage != null)
    {
        <script>
            @Html.Raw(@ViewBag.NotificationMessage);
        </script>
    }
    @* @await Html.PartialAsync("_Footer") *@
</body>
</html>
